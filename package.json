{
	"name": "github-reactions-browser-extension",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"build": "pnpm build:chrome && pnpm build:firefox",
		"build:chrome": "BROWSER=chrome vite build",
		"build:firefox": "BROWSER=firefox vite build",
		"build:zip": "pnpm build && pnpm zip:chrome && pnpm zip:firefox",
		"zip:chrome": "cd dist && zip -r ../builds/chrome.zip chrome",
		"zip:firefox": "cd dist && zip -r ../builds/firefox.zip firefox",
		"dev": "BROWSER=chrome vite build --watch",
		"dev:firefox": "BROWSER=firefox vite build --watch",
		"lint": "biome check --write"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.3",
		"@total-typescript/ts-reset": "^0.6.1",
		"typescript": "~5.8.3",
		"vite": "^7.0.4",
		"vite-plugin-static-copy": "^3.1.1"
	}
}
